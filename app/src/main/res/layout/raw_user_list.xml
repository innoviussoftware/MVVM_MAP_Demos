<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rlMain"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_marginEnd="@dimen/_10sdp"
        android:elevation="@dimen/_16sdp"
        android:layout_alignParentEnd="true"
        android:id="@+id/imgVwEditProfile"
        android:background="@drawable/ic_edit_black"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"/>

    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:background="@drawable/button_bg_border"
        android:id="@+id/rlMainData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_2sdp">


        <ImageView
            android:id="@+id/imgVwUserPic"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:elevation="@dimen/_8sdp" />


        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/imgVwUserPic"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvFirstNameRUL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="first"
                android:gravity="fill_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />
            <TextView
                android:id="@+id/tvSecondNameRUL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="first"
                android:gravity="fill_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />
            <TextView
                android:id="@+id/tvEmailRUL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="first"
                android:gravity="fill_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>

    </RelativeLayout>






</RelativeLayout>